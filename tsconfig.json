{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "Bundler",
    "module": "ES2022",
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "outDir": "dist",

    "lib": ["ES2022", "DOM"],
  }
}
